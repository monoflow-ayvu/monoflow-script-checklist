{
  "name": "checklist",
  "version": "0.4.0",
  "description": "Comprobador de checklist. Pode controlar checklist, retorno ao trabalho e mais.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "ID Formulario Checklist",
        "tableView": true,
        "validate": {
          "required": true,
          "custom": "valid = /^[0-9a-fA-F]{8}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{12}$/.test(input) ? true : 'ID inválido';"
        },
        "key": "checklistId",
        "type": "textfield",
        "input": true
      },
      {
        "label": "Horas até mostrar checklist novamente",
        "tooltip": "Se o usuário sai do sistema e logo volta, quantas horas deveriam ser consideradas para mostrar checklist novamente?",
        "mask": false,
        "tableView": false,
        "delimiter": false,
        "requireDecimal": false,
        "inputFormat": "plain",
        "truncateMultipleSpaces": false,
        "validate": {
          "required": true,
          "min": 0
        },
        "key": "checklistHours",
        "type": "number",
        "input": true
      },
      {
        "label": "Habilitar retorno?",
        "tableView": false,
        "key": "enableReturn",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "label": "Retorno",
        "key": "retorno",
        "conditional": {
          "show": true,
          "when": "enableReturn",
          "eq": "true"
        },
        "type": "well",
        "input": false,
        "tableView": false,
        "components": [
          {
            "label": "ID Formulario Retorno",
            "tableView": true,
            "validate": {
              "required": true,
              "custom": "valid = /^[0-9a-fA-F]{8}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{12}$/.test(input) ? true : 'ID inválido';"
            },
            "key": "returnId",
            "type": "textfield",
            "input": true
          },
          {
            "label": "Horas límite para mostrar retorno",
            "tooltip": "Após esse tempo, vai se mostrar o formulario de checklist ao usuário.",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "min": 0
            },
            "key": "returnHours",
            "type": "number",
            "input": true
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "EULA",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/plugin-transform-arrow-functions": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@size-limit/preset-big-lib": "7.0.8",
    "@types/commander": "^2.12.2",
    "@types/firebase": "3.2.1",
    "@types/lodash": "4.14.179",
    "@types/uuid": "8.3.4",
    "babel-loader": "8.2.3",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "^9.0.0",
    "compression-webpack-plugin": "9.2.0",
    "graphql": "^16.3.0",
    "graphql-request": "^4.0.0",
    "inquirer": "^8.2.0",
    "mobx-keystone": "0.67.0",
    "semver": "^7.3.5",
    "size-limit": "7.0.8",
    "ts-loader": "9.2.7",
    "typed-emitter": "2.1.0",
    "typescript": "4.6.2",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2"
  },
  "dependencies": {
    "@fermuch/telematree": "9.15.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.6.8",
    "lodash": "4.17.21",
    "mobx": "6.4.2"
  }
}
